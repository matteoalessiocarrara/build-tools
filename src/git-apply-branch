set -e

if [ -z "$1" ]
then
	echo Ãˆ richiesto il nome del branch come parametro
	exit 1
fi

current_branch="$(git symbolic-ref HEAD --short)"
patch_branch="$1"

git diff --full-index "$current_branch" "$patch_branch"  | git apply
